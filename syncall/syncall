#!/bin/bash
updatenag="There are updates for the following projects: "
for project in $(find * -maxdepth 0 -type d); do
	echo "-----------------------------------";
	echo "Syncing $project";
	echo "-----------------------------------";
	cd "$project";
	sync=$(git pull origin);
	if [ $? -eq 0 ]; then
		if [[ $sync != *"Already up"* ]]; then
			updatenag+="$project "
		fi
	fi
	echo "";
	cd ..;
done
echo $updatenag;
